<div class="container">
  <h1>Cocktail's list</h1>

  <% @cocktails.each do |cocktail| %>
    <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
    <%= link_to "Delete cocktail?", cocktail_path(cocktail),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  <% end %>

  <%= link_to "Create a new cocktail?", new_cocktail_path %>
</div>
