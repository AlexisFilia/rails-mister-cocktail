<h1>Add a new dose to ...</h1>

<%= simple_form_for([@cocktail, @dose]) do |f| %>
  <% if @dose.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @dose.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :ingredient, collection: Ingredient.all %>
  <%= f.input :description %>
  <%= f.submit "Add new dose", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to cocktail ...", cocktail_path(@cocktail) %>
